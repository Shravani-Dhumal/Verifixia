# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:5173,http://localhost:8085,https://your-netlify-domain.netlify.app

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Neon Database Configuration (Netlify)
# This is automatically set by Netlify when you connect Neon
NETLIFY_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/database

# Or use DATABASE_URL as fallback
DATABASE_URL=postgresql://user:password@localhost/verifixia

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-email@firebase.gserviceaccount.com
